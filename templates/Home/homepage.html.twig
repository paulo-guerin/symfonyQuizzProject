{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset( 'css/homepage.css' ) }}">
{% endblock %}
{% block title %}Page d'acceuil{% endblock %}

{% block content %}
{% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}
    <h1>Bienvenue sur PoleQuizz!</h1>
    <h2>Le site de référence pour les amoureux de pôle dance</h2>
    <h3>Vous êtes déjà {{ players }} à attendre le quizz!</h3>  
    {{ form_start(form) }}
        <div class='d-flex justify-content-center mt-5'> {{ form_label(form.email) }}</div>
        <div class='d-flex justify-content-center'>{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }} </div>
        <small>{{ form_help(form.email) }}</small>
        <div class="form-error">
            {{ form_errors(form.email) }}
        </div>
        <div class='d-flex justify-content-center mt-2'>{{ form_widget(form.save, {'attr': {'class': 'btn btn-info'}}) }} </div>
{{ form_end(form) }}

{% endblock %}
